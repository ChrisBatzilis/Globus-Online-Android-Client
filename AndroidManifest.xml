<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.globus.globustransfer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.globus.globustransfer.MainActivity"
            android:label="@string/app_name_full" >
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.globus.globustransfer.StartTransfer"
            android:label="@string/title_activity_start_transfer" >
        </activity>
        <activity
            android:name="org.globus.globustransfer.EndpointActivity"
            android:label="@string/title_activity_endpoint"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="org.globus.globustransfer.MenuActivity"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name="org.globus.globustransfer.MonitorActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_monitor" >
        </activity>
    </application>

</manifest>