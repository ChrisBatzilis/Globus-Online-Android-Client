<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="30dp"
    android:orientation="horizontal"
    android:background="@color/list_view_color"
    >
    
    
    <ImageView 
        android:id="@+id/task_status"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/completed"
        android:layout_marginRight="32dp"
        android:contentDescription="@string/image_description"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
       
        />
    <TextView 
        android:id="@+id/task_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_toRightOf="@id/task_status"
        android:layout_centerVertical="true"
        android:text="@string/task_id_placeholder"
        android:layout_toLeftOf="@+id/task_type"   
         android:textColor="@color/text_color"
        />
    	
    	
    <ImageView
        android:id="@id/task_type"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="100dp"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/image_description1"
        android:src="@drawable/type_transfer" />
    
    <TextView
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textStyle="italic"
        android:layout_marginLeft="5dp"
        android:textColor="@android:color/darker_gray"
        android:text="@string/progress_placeholder"
        />
    

    
</RelativeLayout>